<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
	<id>electron-sv.desktop</id>
	<name>Electron sv</name>
	<developer_name>dennis</developer_name>
	<summary>Lightweight Bitcoin sv Client</summary>
	<description>
		<p>Electron sv is an SPV wallet for Bitcoin sv</p>
		<p>Control your own private keys. Easily back up your wallet with a mnemonic seed phrase. Enjoy high security without downloading the blockchain or running a full node.</p>
	</description>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>MIT</project_license>
	<url type="homepage">https://www.electronsv.org/</url>
	<url type="help">https://github.com/Electronsv/Electron-sv/issues?q=is%3Aissue</url>
	<screenshots>
		<screenshot type="default">
			<image type="source">https://www.electronsv.org/images/shot4.png</image>
			<caption>Main application window</caption>
		</screenshot>
	</screenshots>
	<translation type="gettext">electron-sv</translation>
	<provides>
		<binary>electron-sv</binary>
		<python3>electronsv</python3>
		<python3>electronsv_gui</python3>
		<python3>electronsv_plugins</python3>
	</provides>
	<update_contact>Electron@Electron.org</update_contact>
</component>
